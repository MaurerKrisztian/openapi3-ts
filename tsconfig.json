{
    "compilerOptions": {
        "declaration": true,
        "target": "es2020",
        "module": "commonjs",
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "noEmitHelpers": true,
        "emitDeclarationOnly": true,
        "outDir": "dist",
        "rootDir": "src",
        "types": ["vitest/globals", "node"]
    },
    "compileOnSave": true,
    "buildOnSave": true,
    "exclude": ["**/*.spec.ts", "bin", "dist", "vite.config.ts", "node_modules/**"]
}
